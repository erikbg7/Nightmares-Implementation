<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <!-- A RecyclerView with some commonly used attributes -->

    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="78dp"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:src="@android:drawable/ic_menu_add" android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"/>
    <Button
            android:text="New Track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_alignParentStart="true"
            android:layout_marginStart="83dp" android:layout_alignParentBottom="true"
            android:onClick="onNewTrackButtonClicked"
            android:layout_marginBottom="36dp"/>



</RelativeLayout>